<article class="col-lg-12 actuality-preview">
    <header>
        <h3 class="text-left text-uppercase" id="actuality{{ actuality.id|default('0') }}">
            {{ actuality.name }}
            <time><small>{{ actuality.dateTime|date("j.n.Y") }}</small></time>
        </h3>
    </header>
    <div>
        {{ actuality.textValue|markdown_to_html }}
    </div>
</article>
